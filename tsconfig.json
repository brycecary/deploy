{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": false,
        "target": "es6",
        "sourceMap": true,
        "lib": [
            "esnext",
            "dom"
        ],
        "baseUrl": "./",
        "rootDir": ".",
        "incremental": true,
        "typeRoots": [
            "node_modules/@types",
            "./types"
        ],
    }
}